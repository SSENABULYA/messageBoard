<% @messages.each do |message| %>
	<div class="col-md-4 cf">
		<div class="message">
			<h2 class="message-title"><%= message.title %></h2>
			<%= link_to "View Message", message_path(message), class: "btn btn-custom" %>
		</div>
	</div>
<% end %>
<div class="cf" style="text-align: center;">
	<%= will_paginate @messages, inner_window: 1, outer_window: 0 %>
</div> 
