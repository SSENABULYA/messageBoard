<div class="col-md-8 col-md-offset-2">
	<div class="message-show">
		<h2 class=""><%= @message.title%></h2>
		<p class="message-posted-by">Posted by <%= @message.user.email %> <%= time_ago_in_words(@message.created_at) %> ago</p>
		<p class="message-desc"><%= @message.description%></p>

		<!-- time when a message was posted -->


		<h3>Comments:</h3>
		<%= render @message.comments %>

		<h3 class="reply-to-msg">Reply to Message:</h3>
		<%= render 'comments/form'%>

		<div class="links btn-group">
			<%= link_to "Back", root_path, class: "btn btn-custom" %>
			<% if user_signed_in? %>
				<% if @message.user_id == current_user.id %>
					<%= link_to "Edit", edit_message_path(@message), class: "btn btn-custom" %>
					<%= link_to "Delete", message_path(@message), method: :delete, data: {confirm: "Are sure you want to delete this message ?"}, class: "btn btn-custom" %>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
